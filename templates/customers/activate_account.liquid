<!--==================== mx-sec Section ====================-->
<section class="account-container">
	<div class="container">
		<div  class = 'row'>
			<div class="col-lg-6 offset-lg-3">

				<div id="login-form">
					<div class="text-center mb-4">
						<div class = 'decoration '>{% render 'icon-starburst' %}</div>
						<h1 class="h3 my-4 ">{{ 'customer.activate_account.title' | t }}</h1>
						<div class="row">
              
							<div class="col-lg-8 offset-lg-2">
								<p class="rte">{{ 'customer.activate_account.subtext' | t }}</p>
							</div>
						</div>
					</div>
	        {% form 'activate_customer_password'  , class:'form'  %}
            {{ form.errors | default_errors }}
  
            <div id="password" class="form-group">
              <label class="form-label" for="password">{{ 'customer.activate_account.password' | t }}</label>
              <input type="password" 
                value="" 
                name="customer[password]" 
                id="customer_password" 
                class="form-control" size="16" />
            </div>
            <div id="password_confirm" class="form-group">
              <label class="form-label" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
              <input type="password" 
                value="" 
                name="customer[password_confirmation]" 
                id="customer_password_confirmation" 
                class="form-control" size="16" />
            </div>
            <div class="form-group mt-4">
              <input class="btn btn-primary me-3" 
                type="submit" 
                value="{{ 'customer.activate_account.submit' | t }}" />
              <span class="note">or</span>
              <input type="submit" 
                class="btn btn-outline-light ms-3" 
                name="decline" 
                id="customer_decline" 
                value="{{ 'customer.activate_account.cancel' | t }}" />
            </div>
          {% endform %}



				</div><!-- #customer -->

					
			</div>
		</div>
	</div>
</section>




