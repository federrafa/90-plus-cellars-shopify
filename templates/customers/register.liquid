  <div class="container  account-container">


      <!-- Create Customer -->
      <div  class = 'row'>
        <div class="col-lg-6 offset-lg-3">
          <div class="register__intro text-center mb-4">
            <div class = 'decoration'>
              {% render 'icon-starburst' %}
            </div>
            <h1 class="h3 my-3">{{ 'customer.register.title' | t }}</h1>
            <div class="row">
              <div class="col-lg-8 offset-lg-2">
                <p>{{ 'customer.register.description' | t }}</p>
              </div>
            </div>
          </div>
      
          {% form "create_customer", class: 'form', redirect_to:'/account/' %}
            {{ form.errors | default_errors }}
                <div  class="form-group">
                  <label for="first_name" class="form-label">{{ 'customer.register.first_name' | t }}</label>
                  <input type="text" 
                    value="" 
                    name="customer[first_name]" 
                    id="first_name" 
                    class="form-control" 
                    required 
                    placeholder="{{ 'customer.register.first_name_placeholder' | t }}" 

                   />
                </div>
              
                <div  class="form-group">
                  <label for="last_name" class="form-label">{{ 'customer.register.last_name' | t }}</label>
                  <input type="text" 
                    value="" 
                    name="customer[last_name]" 
                    id="last_name" 
                    class="form-control"  
                    required 
                    placeholder="{{ 'customer.register.last_name_placeholder' | t }}" 
                  />
                </div>
  
                <div  class="form-group">
                  <label for="email" class="form-label">{{ 'customer.register.email' | t }}</label>
                  <input type="email" 
                    value="" 
                    name="customer[email]" 
                    id="email" 
                    class="form-control" 
                    required
                    placeholder="{{ 'customer.register.email_placeholder' | t }}" 
                  />
                </div>

                <div  class="form-group">
                  <label for="password" class="form-label">{{ 'customer.register.password' | t }}</label>
                  <input type="password" 
                    value="" 
                    name="customer[password]" 
                    id="password" 
                    class="form-control password"  
                    required 
                    placeholder="{{ 'customer.register.password_placeholder' | t }}" 
                  />
                </div>

                <div class="form-group">
                  <input class="btn action_button btn-primary" type="submit" value="{{ 'customer.register.submit' | t }}" />
                </div>
  
  
          {% endform %}
        </div>
      </div><!-- /#create-customer -->


  </div>
